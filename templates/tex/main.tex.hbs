%  -- TITLE --
\makeatletter
\renewcommand{\maketitle}{
\setlength{\leftskip}{-1em}

{\huge \scshape \@author}

\vspace{-.5em}
\rule{.4 \textwidth}{0.5pt}

{
{\it \phone}
\ | \
{\it \email}
\ | \
\href{http://\website}{\it \website}
}

\setlength{\leftskip}{0em}
}
\makeatother

% -- SECTION --

\titlespacing{\section}
{-1em}  % leading
{.8em}  % before
{.4em}  % after

\titleformat{\section}
{}
{}
{0em}  % number-header spacing 
{\Large \scshape  #1 \ \xrfill[.2em]{.5pt}}

% -- RESUME ITEM --

\titlespacing{\subsection}
{0em}  % leading
{1em}  % before
{.5em}  % after

\titleformat{\subsection}
{}
{}
{0em}  % number-header spacing 
{\bfseries #1}

\newcommand{\resumeitem}[3]{\subsection{%
		\def\subtitle{#2}%
		\def\empty{}%
		#1%
		\ifx\subtitle\empty{ }\else{, }\fi
		{\normalfont \itshape #2}
		\hfill
		{\normalfont \itshape #3}
	}}


% -----------
% -- LINKS -- 
% -----------

\let\oldhref\href
\renewcommand{\href}[2]{%
	#2
	\oldhref{#1}{\raisebox{-.1em}{\faicon{link}}}%
}


\author{ {{~about.name~}} }

\def\phone{ {{~about.phone~}} }
\def\email{ {{~about.email~}} }
\def\github{ {{~about.github~}} }
\def\website{ {{~about.website~}} }

\begin{document}

\maketitle

{{#each sections}}
	\section{ {{~this.title~}} }
	\label{ {{~this.key~}} }

	{{{this.summary}}}

	{{#if this.citations}}
		{{#each this.citations}}
			\fullcite{ {{~this~}} }

		{{/each}}
	{{/if}}

	{{#each this.items}}
		\def\margin{}	

		{{#if this.dates}}
			\def\margin{({{{this.dates}}})}
		{{/if}}

		{{#if this.github}}
			\def\margin{%
				\normalfont \small \faicon{github}
				\href{https://github.com/\github/{{this.github~}} }
				     {\textit{\github/{{this.github~}}}}%
			}
		{{/if}}

		\resumeitem{%
			{{{this.title}}}%
		}{%
			{{{this.subtitle}}}%
		}{\margin}
 
		{{#if this.bullets}}
			\begin{itemize}
			{{#each this.bullets}}
				\item {{{this}}}
			{{/each}}
			\end{itemize}
		{{/if}}
	{{/each }}
{{/each }}

\end{document}
