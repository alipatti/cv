\documentclass{resume}

\author{ {{~about.name~}} }

\def\phone{ {{~about.phone~}} }
\def\email{ {{~about.email~}} }
\def\github{ {{~about.github~}} }
\def\website{ {{~about.website~}} }

\begin{document}

\maketitle

{{#each sections}}
	\section{ {{~this.name~}} }
	\label{ {{~this.key~}} }

	{{{this.summary}}}

	{{#if this.citations}}
		{{#each this.citations}}
			\fullcite{ {{~this~}} }

		{{/each}}
	{{/if}}

	{{#each this.items}}
		\def\margin{}	

		{{#if this.dates}}
			\def\margin{({{this.dates}})}
		{{/if}}

		{{#if this.github}}
			\def\margin{%
				\normalfont \small \faicon{github}
				\href{https://github.com/\github/{{this.github~}} }
				     {\textit{\github/{{this.github~}}}}%
			}
		{{/if}}

		\resumeitem{ {{~this.title~}} }{ {{~this.subtitle~}} }{\margin}

		{{#if this.bullets}}
			\begin{itemize}
			{{#each this.bullets}}
				\item {{{this}}}
			{{/each}}
			\end{itemize}
		{{/if}}
	{{/each }}
{{/each }}

\end{document}
